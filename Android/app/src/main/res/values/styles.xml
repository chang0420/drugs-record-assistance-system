<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Allgreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#405E81</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:actionMenuTextColor">@color/Allgreen</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/Allgreen</item>
    </style>

    <style name="roundedCornerStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Set">
        <item name="android:textSize">23dp</item>
        <item name="android:textColor">@color/brown</item>
    </style>
    <style name="Set2">
        <item name="android:textSize">23dp</item>
        <item name="android:textColor">@color/green</item>
    </style>
    <style name="background">
        <item name="android:background">@color/white</item>
    </style>

    <style name="TabFont" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">11dp</item>
    </style>

    <style name="Set3">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/grey</item>
    </style>
    <style name="Set4">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="PersonalMed">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="PersonalMed2">
        <item name="android:background">@color/txtPersonalMed</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="PersonalMed3">
        <item name="android:background">@color/txtPersonalMed</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="SetMed">
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="SetDetailMed">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="SetMedDownList">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/Allgreen</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:background">#FFE579</item>
    </style>

    <style name="drawer_menu">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="NavigationView" >
        <item name="android:listDivider">@color/noColor</item>
    </style>
    <style name="PageTitle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/Allgreen</item>
        <item name="android:background">@color/noColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="colorControlNormal">@color/Allgreen</item>
    </style>

    <style name="MyToolbarStyle2">
        <item name="android:minHeight">?actionBarSize</item>
        <item name="android:background">@color/MedMessage</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/MyToolbarTheme</item>
        <item name="android:actionMenuTextColor">@color/Allgreen</item>
    </style>
    <style name="MyToolbarStyle">
        <item name="android:minHeight">?actionBarSize</item>
        <item name="android:background">@color/noColor</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/MyToolbarTheme</item>
        <item name="android:actionMenuTextColor">@color/Allgreen</item>
    </style>
    <style name="MyToolbarTheme">
        <!-- Used to tint the back arrow, menu and spinner arrow -->
        <item name="colorControlNormal">@color/Allgreen</item>
    </style>

    <style name="abTitle">
        <item name="android:actionMenuTextColor">@color/Allgreen</item>
    </style>

    <style name="noColor">
        <item name="android:textColor">@color/noColor</item>
    </style>
    <style name="MedMessage">
        <item name="android:background">@color/MedMessage</item>
    </style>
</resources>
