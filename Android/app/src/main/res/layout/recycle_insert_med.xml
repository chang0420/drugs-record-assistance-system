<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="17dp"
    android:background="@drawable/med_bg2"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/med_bg3"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="35dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="普拿疼Panadol"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="?attr/colorBackgroundFloating"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="30dp"
            android:background="#00FFFFFF"
            android:drawableRight="@drawable/trash" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageIv"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:src="@drawable/camera3"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView19"
                style="@style/SetDetailMed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="藥名：" />

            <Button
                android:id="@+id/inputImageBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:drawableLeft="@drawable/camera_med_name"
                android:text="拍攝藥名"
                android:textColor="@color/Allgreen" />
        </LinearLayout>

        <EditText
            android:id="@+id/recognizedCBEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:hint="中文商品名"/>

        <EditText
            android:id="@+id/recognizedEBEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:hint="英文商品名"/>

        <EditText
            android:id="@+id/recognizedGenericEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:hint="藥學名"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtUserName"
            style="@style/SetDetailMed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="單次劑量"
            android:textColor="#000"
            android:textSize="18dp" />

        <Spinner
            android:id="@+id/spnDose"
            style="@style/SetMedDownList"
            android:layout_width="150dp"
            android:layout_height="38dp"
            android:layout_weight="8"
            android:backgroundTint="@color/Allgreen"
            android:entries="@array/spnDose_list"
            android:layout_marginBottom="6dp"/>


        <TextView
            android:id="@+id/textView_sub1"
            style="@style/SetDetailMed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="用藥時間"
            android:textColor="#000"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal">


        <Spinner
            android:id="@+id/spnPeriod"
            style="@style/SetMedDownList"
            android:backgroundTint="@color/Allgreen"
            android:layout_width="150dp"
            android:layout_height="38dp"
            android:entries="@array/spnPeriod_list" />

        <Spinner
            android:id="@+id/spnTiming"
            style="@style/SetMedDownList"
            android:backgroundTint="@color/Allgreen"
            android:layout_width="150dp"
            android:layout_height="38dp"
            android:entries="@array/spnTiming_list" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="6dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_sub2"
            style="@style/SetDetailMed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="用藥頻率"
            android:textColor="#000"
            android:textSize="18dp" />

        <Spinner
            android:id="@+id/spnFrequency"
            style="@style/SetMedDownList"
            android:layout_width="150dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:backgroundTint="@color/Allgreen"
            android:entries="@array/spnFrequency_list" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_eatMedicien"
                style="@style/SetDetailMed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:text="開始服用藥日期"
                android:textColor="#000"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/ivCalender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/calendar" />

        </LinearLayout>

        <EditText
            android:id="@+id/editMedStart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="7dp"
            android:text="2022/09/07"
            android:textSize="16dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">

        <TextView
            style="@style/SetDetailMed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="用藥天份"
            android:textColor="#000"
            android:textSize="18dp" />

        <Spinner
            android:id="@+id/spnMedDay"
            style="@style/SetMedDownList"
            android:backgroundTint="@color/Allgreen"
            android:layout_width="150dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:entries="@array/spnMedDay_list" />
    </LinearLayout>


</LinearLayout>