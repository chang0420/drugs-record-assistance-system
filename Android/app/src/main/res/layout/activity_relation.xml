<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RelationActivity">

    <include
        layout="@layout/toolbar"
        android:id="@+id/myToolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_margin="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_Now_relation"
            android:layout_width="80dp"
            android:layout_height="78dp"
            android:layout_marginEnd="6dp"
            android:text="現有關係"
            android:textColor="@color/gray"
            android:textSize="19dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_confirm_relation"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="6dp"
            android:text="核准加入"
            android:textColor="@color/gray"
            android:textSize="19dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_Insert_relation"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="新增關係"
            android:textColor="@color/gray"
            android:textSize="19dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/relation_bg"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:text="---您的照顧者---"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleview"
            android:layout_width="match_parent"
            android:layout_height="245dp"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tvAccount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="帳號："
                android:textColor="@color/white"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txtAccount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/yellow"
                android:hint="帳號"
                android:textColor="@color/white"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tvPassword"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="密碼："
                android:textColor="@color/white"
                android:textSize="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="密碼"
                android:textColor="@color/white"
                android:background="@color/yellow"
                android:id="@+id/txtPassword"
                android:textSize="20dp"/>


        </LinearLayout>

        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="13dp"
            android:text="送出申請"
            android:textSize="19dp"
            app:backgroundTint="@color/dark_brown" />

    </LinearLayout>

</LinearLayout>